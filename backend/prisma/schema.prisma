// This is your Prisma schema file

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  category  String?  // Men, Women, Pro, Doubles
  weight    Float?
  height    Float?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  courses   Course[]
  trainings Training[]
  goals     Goal[]
  settings  UserSettings?

  @@map("users")
}

model Course {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  city      String
  date      DateTime
  category  String   // Men, Women, Pro, Doubles
  totalTime Int      // Total time in seconds
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  times CourseTime[]

  @@index([userId])
  @@index([date])
  @@map("courses")
}

model CourseTime {
  id          String @id @default(uuid())
  courseId    String
  course      Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  segment     String // run1, sledPush, run2, sledPull, run3, burpeeBroadJump, run4, row, run5, farmerCarry, run6, sandbagLunges, run7, wallBalls, run8
  timeSeconds Int    // Time in seconds

  @@unique([courseId, segment])
  @@index([courseId])
  @@map("course_times")
}

model Training {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String   // Run, Sled, Renfo, MixHyrox
  date      DateTime
  duration  Int?     // Duration in minutes
  distance  Float?   // Distance in km
  load      Float?   // Load in kg
  rpe       Int?     // Rate of Perceived Exertion (1-10)
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([date])
  @@map("trainings")
}

model Goal {
  id         String    @id @default(uuid())
  userId     String
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  title      String
  targetTime Int?      // Target time in seconds
  targetDate DateTime?
  achieved   Boolean   @default(false)
  achievedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([userId])
  @@map("goals")
}

model UserSettings {
  id            String   @id @default(uuid())
  userId        String   @unique
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  theme         String   @default("light") // light, dark
  notifications Boolean  @default(true)
  language      String   @default("fr")
  updatedAt     DateTime @updatedAt

  @@map("user_settings")
}


